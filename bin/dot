#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
#
set -e

export ZSH=$HOME/.dotfiles

# Output colors
GRN='\033[0;32m'
RED='\033[0;31m'
YLW='\033[1;33m'
CLR='\033[0m'

displayUsageAndExit() {
  echo "dot -- dotfiles management"
  echo ""
  echo "Usage: dot [options]"
  echo ""
  echo "Options:"
  echo "  -e, --edit    Open dotfiles directory for editing"
  echo "  -h, --help    Show this help message and exit"
  exit
}

while test $# -gt 0; do
  case "$1" in
    "-h"|"--help")
      displayUsageAndExit
      ;;
    "-e"|"--edit")
      exec "$EDITOR" "$ZSH"
      exit
      ;;
    *)
      echo "Invalid option: $1"
      displayUsageAndExit
      ;;
  esac
  shift
done

# detect operating system
if test "$(uname -s)" = "Darwin"; then
  echo "${YLW}installing macOS dependencies${CLR}"

  $ZSH/macos/set-defaults.sh

  echo "${YLW}› install brew${CLR}"
  $ZSH/pkg/install-homebrew.sh 2>&1

  echo "${YLW}› brew update${CLR}"
  brew update

  echo "${YLW}› brew bundle${CLR}"
  brew bundle --file=$ZSH/Brewfile

  echo "${YLW}› brew cleanup${CLR}"
  brew cleanup \
    && brew doctor \
    && brew cask doctor

elif test "$(uname -s)" = "Linux"; then
  echo "${YLW}installing Linux dependencies${CLR}"

  $ZSH/linux/set-defaults.sh

  # detect package manager
  if test $(command -v eopkg); then
    echo "${YLW}› found Evolve OS Package tool (EOPKG)${CLR}"
    echo "${YLW}› eopkg update-repo and upgrade${CLR}"
    test "$UID" = 0 || $ZSH/pkg/eopkg-update-upgrade.sh 2>&1

    echo "${YLW}› eopkg install from SolusFile${CLR}"
    test "$UID" = 0 || $ZSH/pkg/eopkg-install-solusfile.sh 2>&1

  elif test $(command -v apt); then
    echo "${YLW}› found Advanced Packaging tool (APT)${CLR}"
    echo "${YLW}› apt update and upgrade${CLR}"
    test "$UID" = 0 || $ZSH/pkg/apt-update-upgrade.sh 2>&1

    echo "${YLW}› apt install from AptFile${CLR}"
    test "$UID" = 0 || $ZSH/pkg/apt-install-aptfile.sh 2>&1
  fi
fi

cd "$(dirname "$0")/.."

# find all installers and run them iteratively
find . -name install.sh | while read installer ; do sh -c "${installer}" ; done
